@model Tracker.Models.ManageConfigModel
@{
    ViewBag.Title = "ManageConfig";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-group">
    <div class="panel50">
        <h2>@ViewBag.Title.</h2>

        @using (Html.BeginForm("UpdateConfig", "Manage", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.TimeSpanDays)
                @Html.TextBoxFor(m => m.TimeSpanDays)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.TimeSpanHours)
                @Html.TextBoxFor(m => m.TimeSpanHours)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.TimeSpanMinutes)
                @Html.TextBoxFor(m => m.TimeSpanMinutes)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.SearchingDistance)
                @Html.TextBoxFor(m => m.SearchingDistance)
            </div>

            @Html.AntiForgeryToken()
            <input class="button-default" type="submit" />
        }
    </div>
    <div class="panel50">
        <h2>Info</h2>
        <p>Tutaj możesz ustawić swoją konfigurację, która będzie wykorzystywana do przeszukiwania podobnych tras.</p>
    </div>
</div>