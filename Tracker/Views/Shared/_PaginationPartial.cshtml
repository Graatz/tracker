@model Tracker.Models.PaginationViewModel

<div class="pagination">
    @if (Model.CurrentPage > 0)
    {
        @Html.ActionLink("<", Model.ViewName, new { startingIndex = (Model.CurrentPage - 1) * 10 }, new { @class = "active-page" })
    }

    @if (Model.CurrentPage > 1)
    {
        @Html.ActionLink("1", Model.ViewName, new { startingIndex = 0 } )
        <p>...</p>
    }

    @for (int i = Model.DisplayFrom; i <= Model.DisplayTo; i++)
    {

        if (i == Model.CurrentPage)
        {
            @Html.ActionLink((i + 1).ToString() + " ", Model.ViewName, new { startingIndex = i * 10 }, new { @class = "active-page" })
        }
        else
        {
            @Html.ActionLink((i + 1).ToString() + " ", Model.ViewName, new { startingIndex = i * 10 }, null)
        }
    }

    @if (Model.CurrentPage < (Model.NumberOfTracks / Model.NumberOfTracksPerPage) - 1)
    {
        <p>...</p>
        @Html.ActionLink(Math.Ceiling((double)((double)Model.NumberOfTracks / (double)Model.NumberOfTracksPerPage)).ToString(), Model.ViewName, new { startingIndex = (Model.NumberOfTracks / Model.NumberOfTracksPerPage) * 10 })
    }

    @if (Model.CurrentPage < (Model.NumberOfTracks / Model.NumberOfTracksPerPage))
    {
        @Html.ActionLink(">", Model.ViewName, new { startingIndex = (Model.CurrentPage + 1) * 10 }, new { @class = "active-page" })
    }

</div>